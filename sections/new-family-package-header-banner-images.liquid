    {
      "name": "Product Banner Images",
      "tag": "section",
    "class": "product-banner-images",
      "settings": [],
    "max_blocks": 4,
    "blocks": [
        {
        "type": "Image",
        "name": "Images",
        "settings": [
            {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
            },
            {
            "type": "text",
            "id": "image_text",
            "label": "Image Text",
            "default": "text"
            }
            // {
