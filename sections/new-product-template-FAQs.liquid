            }
        },
        {
          "type": "text",
          "settings": {
              "faqs_title": "What is the refund policy?",
              "faqs_content": "International customers are responsible for the postage to return swabs to us. You can read our <a href='https://africanancestry.com/policies/refund-policy'>refund policy here</a>."
            }
        }
      ]
    }
  ]
}
{% endschema %}
