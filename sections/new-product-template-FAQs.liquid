<div class="product-template-FAQs-section">
  <div class="page-width">
    <div class="row">
      <div class="col-md-12">
        <div class="product-template-FAQs-content__wrapper">
          <div class="product-template-head">
            {% if section.settings.product_template_faqs_heading %}
              <h2 class="product-template-FAQs-heading">{{ section.settings.product_template_faqs_heading }}</h2>
            {% endif %}
            {% if section.settings.product_template_faqs_text %}
              <div class="product-template-section-FAQs-text">
                <p>{{ section.settings.product_template_faqs_text }}</p>
              </div>
            {% endif %}
          </div>

          <div class="accordion" id="accordionFAQs">
            {% for block in section.blocks %}
                <div class="product-template-card">
                  <div class="product-template-card-header" id="headingFAQs{{ forloop.index }}">
                    <h4 class="mb-0 btn btn-link collapsed"
                      data-toggle="collapse"
                      data-target="#collapseFAQs{{ forloop.index }}"
                      aria-expanded="false">
                        {{ block.settings.faqs_title }}
                        <i class="fa fa-plus" aria-hidden="true"></i>
                    </h4>
                  </div>
                  <div
                    id="collapseFAQs{{ forloop.index }}"
                    class="collapse"
                    aria-labelledby="headingFAQs{{ forloop.index }}"
                    data-parent="#accordionFAQs"
                  >
                    <div class="product-template-card-body">
                      {{ block.settings.faqs_content }}
                    </div>
                  </div>
                </div>
            {% endfor %}
          </div>          
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Template FAQs",
  "settings": [
    {
      "type": "text",
      "id": "product_template_faqs_heading",
      "label": "Title",
      "default": "FAQs"
    },
    {
      "type": "text",
      "id": "product_template_faqs_text",
      "label": "Content",
      "default": "Your DNA is completely confidential."
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Accordion",
      "settings": [
        {
          "type": "text",
          "id": "faqs_title",
          "label": "Title"
        },
        {
          "type": "html",
          "id": "faqs_content",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Template FAQs",
      "blocks": [
        {
          "type": "text",
          "settings": {
              "faqs_title": "Who owns African Ancestry?",
